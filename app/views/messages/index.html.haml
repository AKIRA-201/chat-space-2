.wrapper
  = render 'shared/side_bar'
  .chat-main
    .chat-main__header
      .chat-main__header--group
        .chat-main__header--group-name
          = @group.group_name
          = link_to edit_group_path(@group) do
            %input.button{type: "button",name: "edit", value: "Edit"}
      .chat-main__header--member
        MEMBER:
        = @group.users.name
    #target.chat-main__body
      = render @messages
    .chat-main__footer
      = form_for [@group, @message], html: {class: 'chat-main__footer--form', id: "new_message"} do |f|
        = f.text_field :body, class: 'chat-main__footer--form-message', placeholder: 'type a message'
        = f.label :image, class: 'form__label' do
          %i.fa.fa-image
          = f.file_field :image, class: 'hidden'
          = f.submit type: "submit", name: "send", value: "Send", class: "chat-main__footer--input"
